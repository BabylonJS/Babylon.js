{
    "extends": "../../../tsconfig.build.json",

    "compilerOptions": {
        "target": "ESNext",
        "outDir": "./dist",
        "rootDir": "../../",
        // "sourceMap": true,
        // "declaration": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "paths": {
            "core/*": ["dev/core/src/*"],
            "loaders/*": ["dev/loaders/src/*"],
            "shared-ui-components/*": ["dev/sharedUiComponents/src/*"]
            // "viewer/*": ["tools/viewer/src/*"]
        },
        "skipLibCheck": true // Add this line to skip checking of declaration files
    },

    "references": [
        {
            "path": "../../dev/core/tsconfig.build.json"
        },
        {
            "path": "../../dev/loaders/tsconfig.build.json"
        }
        // {
        //     "path": "../../tools/viewer/tsconfig.build.json"
        // }
    ],

    "include": ["./src/**/*"]
}
