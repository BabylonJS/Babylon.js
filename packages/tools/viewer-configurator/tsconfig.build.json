{
    "extends": "../../../tsconfig.build.json",

    "compilerOptions": {
        "target": "ESNext",
        "outDir": "./dist",
        "rootDir": "../../",
        "module": "ESNext",
        "moduleResolution": "Node",
        "paths": {
            "core/*": ["dev/core/src/*"],
            "loaders/*": ["dev/loaders/src/*"],
            "shared-ui-components/*": ["dev/sharedUiComponents/src/*"],
            "viewer/*": ["tools/viewer/src/*"],
            "viewer": ["tools/viewer/src/index"]
        }
    },

    "references": [
        {
            "path": "../../dev/core/tsconfig.build.json"
        },
        {
            "path": "../../dev/loaders/tsconfig.build.json"
        },
        {
            "path": "../../dev/sharedUiComponents/tsconfig.build.json"
        }
    ],

    "include": ["./src/**/*"]
}
