{
    "extends": "../../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES5",
        "rootDir": "../../../",
        "declaration": false,
        "importHelpers": true,
        "stripInternal": true,
        "paths": {
            "core/*": ["dev/core/dist/*"],
            "loaders/*": ["dev/loaders/src/*"],
            "@lts/loaders/*": ["lts/loaders/src/*"]
        }
    },
    "include": ["./src/**/*", "../../../dev/loaders/src/**/*", "../../../lts/loaders/src/**/*"]
}
