{
    "extends": "../../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "../../../",
        "target": "ES5",
        "declaration": false,
        "importHelpers": true,
        "stripInternal": true,
        "paths": {
            "core/*": ["dev/core/dist/*"],
            "gui/*": ["dev/gui/src/*"],
            "@lts/gui/*": ["lts/gui/src/*"]
        }
    },
    "include": ["./src/**/*", "../../../dev/gui/src/**/*", "../../../lts/gui/src/**/*"]
}
