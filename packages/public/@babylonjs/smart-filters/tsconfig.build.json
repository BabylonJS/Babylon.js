{
    "extends": "../../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "target": "ES2020",
        "importHelpers": true,
        "sourceMap": true,
        "declarationMap": true,
        "inlineSources": false,
        "plugins": [
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "after": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/smart-filters",
                "appendJS": true
            },
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "afterDeclarations": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/smart-filters",
                "appendJS": true
            }
        ]
    },

    "include": ["./src/**/*"]
}
