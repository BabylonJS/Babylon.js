{
    "extends": "../../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./lib",
        "rootDir": "../../../",
        "declaration": false,
        "target": "ES2020",
        "importHelpers": true,
        "plugins": [
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "after": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/inspector-v2",
                "appendJS": true
            },
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "afterDeclarations": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/inspector-v2",
                "appendJS": true
            }
        ]
    },

    "include": ["../../../dev/inspector-v2/src/**/*", "../../../dev/sharedUiComponents/src/**/*"]
}
