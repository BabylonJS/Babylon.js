{
    "extends": "../../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./",
        "rootDir": "../../../tools/viewer-legacy/src",
        "declaration": true,
        "target": "es5",
        "importHelpers": true,
        "plugins": [
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "after": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/viewer-legacy",
                "appendJS": true
            },
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "afterDeclarations": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/viewer-legacy",
                "appendJS": true
            }
        ]
    },

    "include": ["../../../tools/viewer-legacy/src/**/*"]
}
