{
    "extends": "../../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./",
        "rootDir": "../../../lts/loaders/src",
        "declaration": true,
        "importHelpers": true,
        "target": "ES2020",
        "plugins": [
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "after": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/loaders",
                "appendJS": true
            },
            {
                "transform": "@dev/build-tools/dist/pathTransform.js",
                "afterDeclarations": true,
                "buildType": "es6",
                "basePackage": "@babylonjs/loaders",
                "appendJS": true
            }
        ],
        "paths": {
            "core/*": ["dev/core/dist/*"],
            "loaders/*": ["dev/loaders/dist/*"]
        }
    },

    "include": ["../../../lts/loaders/src/**/*"]
}
