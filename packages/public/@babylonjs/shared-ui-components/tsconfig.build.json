{
    "extends": "../../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./",
        "rootDir": "../../../dev/sharedUiComponents/src",
        "declaration": true,
        "target": "ES2018",
        "importHelpers": true,
        "plugins": [{ "transform": "@dev/build-tools/dist/pathTransform.js", "buildType": "es6", "basePackage": "@babylonjs/shared-ui-components", "appendJS": true }],
        "paths": {
            "core/*": ["lts/core/dist/*"],
            "gui/*": ["lts/gui/dist/*"],
            "shared-ui-components/*": ["dev/sharedUiComponents/src/*"]
        }
    },

    "include": ["../../../dev/sharedUiComponents/src/**/*"]
}
