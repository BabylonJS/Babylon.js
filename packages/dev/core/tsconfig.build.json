{
    "extends": "../../../tsconfig.build.json",

    "compilerOptions": {
        "composite": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "paths": {
            "core/*": ["dev/core/src/*"],
            "esm/*": ["dev/core/src/esm/*"],
        }
    },

    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": [
        "**/node_modules",
        "**/dist",
    ]
}
