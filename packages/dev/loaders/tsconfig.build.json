{
    "extends": "../../../tsconfig.build.json",

    "compilerOptions": {
        "composite": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "paths": {
            "core/*": ["dev/core/dist/*"],
            "loaders/*": ["dev/loaders/src/*"]
        }
    },

    "references": [
        {
            "path": "../core/tsconfig.build.json"
        }
    ],

    "include": ["./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": ["**/node_modules", "**/dist"]
}
