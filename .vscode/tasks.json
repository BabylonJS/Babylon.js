{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "gulp",
    "isShellCommand": true,
    "args": [],
    "showOutput": "always",
    "options": {
        "cwd": "${workspaceRoot}/Tools/Gulp"
    },
    "tasks": [
        { 
            "taskName": "run",
            // Hijack Test Command for easy shortcut
            "isTestCommand": true,
            "problemMatcher": [
                "$tsc"
            ]
        },
        { 
            "taskName": "typescript",
            "isBuildCommand": true,
            "problemMatcher": [
                "$tsc"
            ]
        }
    ]
}
