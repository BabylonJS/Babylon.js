{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Launch Viewer (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:9000/",
            "webRoot": "${workspaceRoot}/Viewer/dist/",
            "sourceMaps": true,
            //"preLaunchTask": "build-viewer", // TODO - test why this fails.
            "userDataDir": "${workspaceRoot}/.tempChromeProfileForDebug",
            "runtimeArgs": [
                "--enable-unsafe-es3-apis"
            ]
        },
        {
            "name": "Launch nullEngine",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/tests/nullEngine/app.js"
        },
        {
            "name": "Launch sandbox (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:1338/sandbox/index-local.html",
            "webRoot": "${workspaceRoot}/",
            "sourceMaps": true,
            "preLaunchTask": "run",
            "userDataDir": "${workspaceRoot}/.tempChromeProfileForDebug",
            "runtimeArgs": [
                "--enable-unsafe-es3-apis"
            ]
        },
        {
