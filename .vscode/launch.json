        {
            "name": "Launch Local Dev (Experimental Firefox)",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:1338/localDev/index.html",
            "pathMappings": [
                {
                    "url": "http://localhost:1338",
                    "path": "${workspaceFolder}"
                }
            ],
